<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="384.0" prefWidth="574.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.RoomsTab">
    <children>
        <VBox spacing="5.0" style="-fx-background-color: #e2e2e2;" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="roomsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="numberColumn" minWidth="50.0" prefWidth="-1.0" style="-fx-alignment: center;" text="Номер" />
                        <TableColumn fx:id="categoryColumn" minWidth="50.0" prefWidth="-1.0" text="Категория" />
                  <TableColumn fx:id="bedsColumn" minWidth="20.0" prefWidth="-1.0" style="-fx-alignment: center;" text="Кол-во мест" />
                        <TableColumn fx:id="floorColumn" minWidth="20.0" prefWidth="-1.0" style="-fx-alignment: center;" text="Этаж" />
                        <TableColumn fx:id="statusColumn" minWidth="30.0" prefWidth="-1.0" text="Статус" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <Label fx:id="recordsCountLabel" maxWidth="1.7976931348623157E308" style="-fx-border-width: 1 0 0 0; -fx-border-color: gray; -fx-background-color: #f4f4f4;" text="Всего записей: 0">
            <padding>
                <Insets bottom="2.0" left="10.0" right="2.0" top="2.0" />
            </padding>
        </Label>
    </children>
</VBox>
